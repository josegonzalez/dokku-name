#!/usr/bin/env bash
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x

STDIN=$(cat)
APP="$1"
NAME_FILE="NAME"
NAME_FILE_PATH="$DOKKU_ROOT/$APP/$NAME_FILE"

output=""
if [[ -f "$NAME_FILE_PATH" ]]; then
  while read line
  do
    output="$output -name $line"
  done < $NAME_FILE_PATH
fi
output="$output -name $APP"
echo "$STDIN$output"